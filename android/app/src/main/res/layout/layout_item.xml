<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.App.Card.ListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp">


    <!-- Root Container -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

        <!-- Circle Container -->
        <androidx.cardview.widget.CardView
                android:id="@+id/circle_container"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="24dp">

            <ImageView
                    android:id="@+id/circle_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- TextViews Container -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/text_line1"
                    style="@style/Widget.App.TextView.CardItem" />

            <TextView
                    android:id="@+id/text_line2"
                    style="@style/Widget.App.TextView.CardItem"
                    android:layout_marginTop="4dp" />

            <TextView
                    android:id="@+id/text_line3"
                    style="@style/Widget.App.TextView.CardItem"
                    android:layout_marginTop="4dp" />
           
        </LinearLayout>

        <!-- More Options Button -->
        <ImageButton
                android:id="@+id/button_more"
                style="@style/Widget.App.ImageButton.MoreOptions"
                android:layout_gravity="top" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>