<resources>

    <!-- Custom FAB Style -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/cards_background</item>
        <item name="tint">@color/black</item>
        <item name="srcCompat">@drawable/ic_add</item>
        <item name="fabSize">normal</item>
    </style>


    <!-- _________________________________ -->
    <!-- Cards implementation -->

    <!-- Card Style -->
    <style name="Widget.App.Card.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">50dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/cards_background</item>
    </style>

    <!-- Circle Container Style -->
    <style name="Widget.App.CircleContainer">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="cardCornerRadius">45dp</item>
        <item name="cardElevation">0dp</item>
        <item name="background">@color/cards_background</item>
    </style>

    <!-- Single Text Style for all card texts -->
    <style name="Widget.App.TextView.CardItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">Add Text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- More Options Button Style -->
    <style name="Widget.App.ImageButton.MoreOptions">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_more_vert</item>
        <item name="android:tint">@android:color/black</item>
    </style>

    <!-- _________________________ -->
    <!-- Tool Bar styling -->

    <!-- Title style -->
    <style name="Widget.App.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/cards_background</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Icon style with simple animation background-->
    <style name="Widget.App.Toolbar.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@android:color/white</item>
    </style>


</resources>